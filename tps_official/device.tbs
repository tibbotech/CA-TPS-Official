#if SIGNAL_STRENGTH_INDICATION=1
sub signal_strength_indication_init()
	dim f as byte
	
	'make sure there is no reset
	io.num=SIGNAL_STRENGTH_CLR
	io.enabled=YES
	io.state=HIGH

	'we will be turning LEDs off
	io.num=SIGNAL_STRENGTH_DATA
	io.enabled=YES
	io.state=HIGH
	'make 5 clocks
	io.num=SIGNAL_STRENGTH_CK
	io.enabled=YES
	for f=0 to 4
		io.state=LOW
		io.state=HIGH
	next f
end sub
#endif	

